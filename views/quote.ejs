<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        .h-75{
            height: 500px !important;
            display: flex;
            align-items: center;
            justify-content: left;
            display: none;
        }


        #content{
            background-color: #fff !important;
        }

        .h-100{
            height: 50px !important;
        }
    </style>
</head>
<body>
    <div class="container ">
        <div class="mt-3 text-center">
            <h1>Pidgin Quote Generator</h1>
        </div>
        <div id="contents" class="bg-light my-5 d-flex align-items-center justify-content-center shadow w-100 mx-auto h-75">
            <p id="content" class="w-75 fst-italic  p-5 mx-auto fs-3" ></p>
        </div>
        <div class="d-flex align-items-center justify-content-center">
            <button class="btn btn-primary w-50 h-100 mx-auto" onclick="displayContent(event)">Run Am</button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        

        function displayContent(event){
            event.preventDefault();

            fetch('http://localhost:5000/pidginQuote')
            .then(response => {
                if(!response.ok){
                    throw new Error('Fetch request failed');
                }
                return response.json()
            })
            .then(data => {
                console.log("API Data: ", data);
                const container = `"${ data.text}"`;
                const main = document.getElementById('content');
                main.innerHTML = container
                
            })
            .catch(error => {
                console.log("error occured");
            })
            const maincontainer = document.getElementById('contents').style.display = "block !important";

        }

    </script>
</body>
</html>